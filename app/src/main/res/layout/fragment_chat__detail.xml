<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:weightSum="11"
    tools:context=".messaging.Chat_Detail">
    <TextView
        android:id="@+id/Chat_Title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="KURUKU MESSAGING"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/threesixty"
        android:textColor="#011831"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_detail_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="9">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="6"
        android:gravity="center_vertical"
        android:background="@drawable/tview">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.1"
            android:gravity="bottom"
            android:background="@drawable/tview"
            tools:ignore="NestedWeights">

            <EditText
                android:id="@+id/send_topic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedWeights"
                android:ems="10"
                android:inputType="textMultiLine" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="bottom">

            <Button
                android:id="@+id/send_buton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_send" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>