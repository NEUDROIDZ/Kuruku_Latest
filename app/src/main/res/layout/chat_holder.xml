<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/maxt">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Chat_Contact_Photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/profile"
        android:src="@drawable/ic_eln8"
        app:civ_border_color="#a604fd"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="6dp">

        <TextView
            android:id="@+id/Chat_Contact_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Mr Tron"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/Chat_Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Hello Mr Tron How are you doing today"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/Chat_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21/01/1993 - 14:45:57"
            android:gravity="end"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:textColor="#111"/>

    </LinearLayout>

</LinearLayout>