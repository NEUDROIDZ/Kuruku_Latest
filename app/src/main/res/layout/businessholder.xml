<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/divider"
    android:layout_marginBottom="3dp"
    android:padding="4dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establishment Name"
        android:textColor="#010845"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/business_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establishment Owner"
        android:textColor="#010845"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/business_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establishment type"
        android:textColor="#010845"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/business_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establishment Location"
        android:textColor="#010845"
        android:textSize="14sp" />

    <RatingBar
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:id="@+id/business_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="10"
        android:rating="5"
        android:stepSize="0.5"
        android:progressTint="#070e54"
        android:progressBackgroundTint="#000000"/>


</LinearLayout>